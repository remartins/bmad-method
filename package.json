{
  "name": "churrasapp",
  "version": "1.0.0",
  "description": "ChurrasApp - Aplicação para organização de churrascos com gestão de convidados e custos",
  "main": "index.js",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:web\"",
    "dev:web": "npm run start --workspace=apps/web",
    "dev:api": "npm run dev --workspace=apps/api",
    "build": "npm run build --workspace=apps/web",
    "build:web": "npm run build --workspace=apps/web",
    "test": "npm run test --workspaces",
    "test:web": "npm run test --workspace=apps/web",
    "test:api": "npm run test --workspace=apps/api",
    "install:all": "npm install",
    "clean": "rm -rf node_modules apps/*/node_modules packages/*/node_modules",
    "start": "npm run start --workspace=apps/api",
    "start:api": "npm run start --workspace=apps/api"
  },
  "keywords": [
    "churrasapp",
    "react",
    "express",
    "nodejs",
    "monorepo",
    "event-management"
  ],
  "author": "ChurrasApp Team",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^8.2.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-org/churrasapp.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/churrasapp/issues"
  },
  "homepage": "https://github.com/your-org/churrasapp#readme"
}
